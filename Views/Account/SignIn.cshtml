@model AppUserLogin


<form method="POST" class="w-75 mx-auto p-3 mt-4">
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" type="text" >
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control" type="password">
    </div>
    
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
    <button class="btn btn-info" type="" asp-action="SignUp" asp-controller="Account">SignUp</button>
    <button class="btn btn-success" type="submit">Login</button>
    @* <a class="btn btn-success" type="submit" asp-action="SignIn" asp-controller="Account">Login</a>    
    </div> *@
    

</form>